<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="329" Width="570">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Menu DockPanel.Dock="Top" Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid  Grid.Row="1"  Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <ListBox   Grid.Row="0">
                    <ListBoxItem>ListBox Item #1</ListBoxItem>
                    <ListBoxItem>ListBox Item #2</ListBoxItem>
                    <ListBoxItem>ListBox Item #3</ListBoxItem>
                </ListBox>
                <TextBlock   Grid.Row="1" />
            </Grid>
            <StackPanel   Grid.Column="1"   >
                <StackPanel  >
                    <Label>Ports</Label>
                    <ComboBox Name="PortsComboBox" >
                    <ComboBoxItem>COM1</ComboBoxItem>
                    <ComboBoxItem>COM2</ComboBoxItem>
                    <ComboBoxItem>COM3</ComboBoxItem>
                </ComboBox>
                </StackPanel>
                <StackPanel  >
                    <Label>BaudRate</Label>
                <ComboBox Name="BaundrateComboBox" >
                    <ComboBoxItem>1024</ComboBoxItem>
                    <ComboBoxItem>9600</ComboBoxItem>
                    <ComboBoxItem>1100</ComboBoxItem>
                </ComboBox>
                </StackPanel>
                <StackPanel   Margin="0,10,0,0">
                    <Button  Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="ButtonConnect_OnClick"/>
                 </StackPanel>
                <StackPanel   Margin="0,10,0,0" VerticalAlignment="Bottom">
                    <TextBox  Name="TextBoxCommand"/>
                    <Button  Content="Send" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="ButtonSend_OnClick" />
                </StackPanel>

            </StackPanel>
        </Grid>
        <DockPanel  Grid.Row="2">
            <StatusBar DockPanel.Dock="Bottom" Visibility="Hidden">
                <StatusBarItem >zzzz</StatusBarItem>
                <Separator />
                <ProgressBar Width="100" Height="15" Value="67" />
                <Separator />
                <StatusBarItem >zzzz2</StatusBarItem>
            </StatusBar>
        </DockPanel>


    </Grid>

</Window>
